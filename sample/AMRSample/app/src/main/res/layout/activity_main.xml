<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorwhite">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/actionBar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#bdc3c7"
            android:scaleType="centerInside"
            android:src="@drawable/action_bar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/actionBar"
            android:padding="16dp">

            <TextView
                android:id="@+id/loadedNetwork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click Refresh Banner to load ads here"
                android:textColor="@color/colorblack" />

            <LinearLayout
                android:id="@+id/adLayout"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@id/loadedNetwork"
                android:background="#ecf0f1"
                android:gravity="center"
                android:orientation="vertical" />

            <LinearLayout
                android:id="@+id/buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/adLayout"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/refreshBanner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Refresh Banner" />

                    <Button
                        android:id="@+id/native_ad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Refresh Native Ad" />

                    <Button
                        android:id="@+id/showInterstitial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Get Interstitial" />

                    <Button
                        android:id="@+id/showVideo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Get Video" />

                    <Button
                        android:id="@+id/disable_personalized_ads"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:minLines="2"
                        android:text="Disable Personalized Ads" />

                    <Button
                        android:id="@+id/on_back_press_example"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:minLines="2"
                        android:text="Back Press Show Interstitial" />


                    <Button
                        android:id="@+id/rotate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:minLines="2"
                        android:text="Rotate Screen" />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:padding="8dp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <Button
                        android:id="@+id/bannerPage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Moving Banner To The Other Activity " />

                    <Button
                        android:id="@+id/nativePage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Moving Native To The Other Activity " />

                    <Button
                        android:id="@+id/test_suite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Start Test Suite" />

                    <Button
                        android:id="@+id/listPage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="ListView Sample" />

                    <Button
                        android:id="@+id/test_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="RecyclerView Sample" />



                    <Button
                        android:id="@+id/multiple_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textSize="13sp"
                        android:text="RecyclerView Multiple Ads" />

                    <Button
                        android:id="@+id/dfp_integration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="DFP Integration" />



                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>
